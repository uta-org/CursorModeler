; xFree cursors for Windows XP.
; Win 2000/XP Alphablended Cursor Scheme installation file.

[Version]
signature="$CHICAGO$"

[DefaultInstall]
CopyFiles = Scheme.Cur, Scheme.Txt
AddReg    = Scheme.Reg

[DestinationDirs]
Scheme.Cur = 10,"%CUR_DIR%"
Scheme.Txt = 10,"%CUR_DIR%"

[Scheme.Reg]
HKCU,"Control Panel\Cursors\Schemes","%SCHEME_NAME%",,"%10%\%CUR_DIR%\%pointer%,%10%\%CUR_DIR%\%help%,%10%\%CUR_DIR%\%work%,%10%\%CUR_DIR%\%busy%,%10%\%CUR_DIR%\%cross%,%10%\%CUR_DIR%\%Text%,%10%\%CUR_DIR%\%Hand%,%10%\%CUR_DIR%\%unavailiable%,%10%\%CUR_DIR%\%Vert%,%10%\%CUR_DIR%\%Horz%,%10%\%CUR_DIR%\%Dgn1%,%10%\%CUR_DIR%\%Dgn2%,%10%\%CUR_DIR%\%move%,%10%\%CUR_DIR%\%alternate%,%10%\%CUR_DIR%\%link%"

; -- Common Information

[Scheme.Cur]
arrow.cur
help.cur
working.ani
busy_candy.ani
select.cur
unavail.cur
ns.cur
ew.cur
nwse.cur
nesw.cur
move.cur
link.cur
prec.cur
pen.cur
alt.cur

[Scheme.Txt]
Readme.txt

[Strings]
CUR_DIR       = "Cursors\Forma Nova"
SCHEME_NAME   = "Forma Nova (Default)"
pointer       = "arrow.cur"
help          = "help.cur"
work          = "working.ani"
busy          = "busy_candy.ani"
text          = "select.cur"
unavailiable  = "unavail.cur"
vert          = "ns.cur"
horz          = "ew.cur"
dgn1          = "nwse.cur"
dgn2          = "nesw.cur"
move          = "move.cur"
link          = "link.cur"
cross         = "prec.cur"
hand          = "pen.cur"
alternate     = "alt.cur"